<%= link_to hero_path(hero) do %>
  <div class="card-product-pop-up">
    <%= cl_image_tag hero.photo.key, crop: :fill %>
    <div class="card-content-pop-up">
      <h2 class="py-2"><%= hero.name %></h2>
      <p><%= hero.power %></p>
      <h2 class="py-2"><%= hero.price %> $</h2>
    </div>
  </div>
<% end %>

